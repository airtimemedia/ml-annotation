    {
      "label": "intent: lint",
      "type": "npm",
      "script": "lint",
      "path": "intent_requests/",
      "problemMatcher": ["$eslint-stylish"],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "intent"
      },
      "options": {
        "cwd": "${workspaceFolder}/intent_requests"
      }
    },

    // ============================================================================
    // COMBINED TASKS
    // ============================================================================
    {
      "label": "all: dev",
      "dependsOn": ["lipsync: dev", "intent: dev"],
      "problemMatcher": [],
